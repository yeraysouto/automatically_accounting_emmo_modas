# Database
EMMO_DATABASE_URL=sqlite:///./emmo.db

# Optional API key auth (client must send header X-API-Key)
# EMMO_API_KEY=change-me
# EMMO_REQUIRE_API_KEY_FOR_WRITE=true

# Optional CORS origins (comma-separated)
# EMMO_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Upload validation
EMMO_MAX_UPLOAD_BYTES=15728640
EMMO_ALLOWED_UPLOAD_MIME_TYPES=image/jpeg,image/png,application/pdf

# Storage
EMMO_STORAGE_ROOT=./storage
EMMO_STORE_UPLOADS=true

# Optional OCR provider via HTTP
# EMMO_OCR_API_URL=http://localhost:8001/ocr/invoice
# EMMO_OCR_API_KEY=change-me
# EMMO_OCR_API_TIMEOUT_S=60

# Reference code auto-generation
# EMMO_AUTO_REFERENCE_CODE=false
# EMMO_REFERENCE_CODE_PREFIX_LEN=3
# EMMO_REFERENCE_CODE_HASH_LEN=12

# Pricing rules (non-AI)
# EMMO_PRICE_CORRECTION_MODE=flag_only
# EMMO_PRICE_MIN_RATIO=0.7

# Logging
# EMMO_LOG_LEVEL=INFO
# EMMO_LOG_JSON=false
