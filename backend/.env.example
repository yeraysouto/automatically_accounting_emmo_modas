# Database
EMMO_DATABASE_URL=sqlite:///./emmo.db

# Postgres example (requires psycopg)
# EMMO_DATABASE_URL=postgresql+psycopg://emmo:emmo@localhost:5432/emmo

# SQLAlchemy engine options (pool settings apply to non-SQLite)
# EMMO_DB_ECHO=false
# EMMO_DB_POOL_PRE_PING=true
# EMMO_DB_POOL_SIZE=5
# EMMO_DB_MAX_OVERFLOW=10

# When using Alembic migrations (recommended in production), disable auto-create.
# EMMO_DB_AUTO_CREATE=true

# Optional API key auth (client must send header X-API-Key)
# EMMO_API_KEY=change-me
# EMMO_REQUIRE_API_KEY_FOR_WRITE=true
# EMMO_REQUIRE_API_KEY_FOR_READ=false

# Security hardening
# EMMO_ENABLE_TRUSTED_HOSTS=false
# EMMO_TRUSTED_HOSTS=localhost,127.0.0.1
# EMMO_HTTPS_REDIRECT=false
# EMMO_ENABLE_HSTS=false

# Basic rate limit (requests/minute). Set 0 to disable.
# EMMO_RATE_LIMIT_PER_MINUTE=0

# Optional CORS origins (comma-separated)
# EMMO_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Upload validation
EMMO_MAX_UPLOAD_BYTES=15728640
EMMO_ALLOWED_UPLOAD_MIME_TYPES=image/jpeg,image/png,application/pdf

# Storage
EMMO_STORAGE_ROOT=./storage
EMMO_STORE_UPLOADS=true

# Optional OCR provider via HTTP
# EMMO_OCR_API_URL=http://localhost:8001/ocr/invoice
# EMMO_OCR_API_KEY=change-me
# EMMO_OCR_API_TIMEOUT_S=60

# Reference code auto-generation
# EMMO_AUTO_REFERENCE_CODE=false
# EMMO_REFERENCE_CODE_PREFIX_LEN=3
# EMMO_REFERENCE_CODE_HASH_LEN=12
# EMMO_ENFORCE_REFERENCE_CODE_PREFIX=true

# Pricing rules (non-AI)
# EMMO_PRICE_CORRECTION_MODE=flag_only
# EMMO_PRICE_MIN_RATIO=0.7
# EMMO_PRICE_HISTORY_DAYS=365
# EMMO_PRICE_HISTORY_MIN_SAMPLES=3

# Logging
# EMMO_LOG_LEVEL=INFO
# EMMO_LOG_JSON=false
