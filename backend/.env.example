# Database
EMMA_DATABASE_URL=sqlite:///./emma.db

# Optional API key auth (client must send header X-API-Key)
# EMMA_API_KEY=change-me

# Optional CORS origins (comma-separated)
# EMMA_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Upload validation
EMMA_MAX_UPLOAD_BYTES=15728640
EMMA_ALLOWED_UPLOAD_MIME_TYPES=image/jpeg,image/png,application/pdf

# Optional OCR provider via HTTP
# EMMA_OCR_API_URL=http://localhost:8001/ocr/invoice
# EMMA_OCR_API_KEY=change-me
# EMMA_OCR_API_TIMEOUT_S=60
